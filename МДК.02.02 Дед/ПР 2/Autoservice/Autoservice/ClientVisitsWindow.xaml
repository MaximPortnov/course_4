<Window x:Class="Autoservice.ClientVisitsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoservice"
        mc:Ignorable="d"
        Title="ClientVisitsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="VisitsDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding VisitDate}" />
                <DataGridTextColumn Header="Service" Binding="{Binding ServiceName}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
